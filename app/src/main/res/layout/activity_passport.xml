<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/general_gradient_background"
        android:padding="20dp"
        tools:context=".features.kyc.ui.basic.PassportActivity">

    <!-- Top App Bar -->
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/topAppBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingVertical="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <ImageView
                android:id="@+id/activity_wallet_back_button"
                android:layout_width="24dp"
                android:layout_height="12dp"
                android:src="@drawable/icon_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:contentDescription="Back" />

        <TextView
                android:id="@+id/titleText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="INTERNATIONAL PASSPORT"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:fontFamily="@font/kumbhsans_bold"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingStart="12dp"
                app:layout_constraintStart_toEndOf="@id/activity_wallet_back_button"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Instructions -->
    <TextView
            android:id="@+id/instructionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload the data page of your international passport"
            android:textSize="14sp"
            android:textColor="@color/steelBlueGrey"
            android:fontFamily="@font/kumbhsans_regular"
            app:layout_constraintTop_toBottomOf="@id/topAppBar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp" />

    <!-- Info Box -->
    <LinearLayout
            android:id="@+id/infoContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="7dp"
            android:paddingHorizontal="14dp"
            android:background="@drawable/rounded_golden_yellow_15pct"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/instructionText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_info_circle"
                android:contentDescription="Info icon" />

        <TextView
                android:id="@+id/infoText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Cross-check your information to make sure it is accurate."
                android:textColor="@color/goldenYellow"
                android:textSize="10sp"
                android:fontFamily="@font/kumbhsans_regular" />
    </LinearLayout>

    <!-- Upload Front -->
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/uploadFrontContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_border_midnight"
            android:paddingVertical="12dp"
            android:paddingHorizontal="16dp"
            android:layout_marginTop="22dp"
            app:layout_constraintTop_toBottomOf="@id/infoContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <TextView
                android:id="@+id/passportFrontLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="International Passport (Front)"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:fontFamily="@font/kumbhsans_bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/uploadFrontButton"
                app:layout_constraintHorizontal_bias="0" />

        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/uploadFrontButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_border"
                android:paddingVertical="10dp"
                android:paddingHorizontal="12dp"
                android:text="Upload file"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Passport Previews -->
    <LinearLayout
            android:id="@+id/passportPreviewContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintTop_toBottomOf="@id/uploadFrontContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <ImageView
                android:id="@+id/passportFrontPreview"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:scaleType="centerCrop"
                android:contentDescription="Front passport preview"
                android:background="@drawable/image_preview_background" />

        <ImageView
                android:visibility="gone"
                android:id="@+id/passportBackPreview"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:scaleType="centerCrop"
                android:contentDescription="Back passport preview"
                android:background="@drawable/image_preview_background" />
    </LinearLayout>

    <!-- Next Button -->
    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/nextButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="@drawable/button_ripple"
            android:text="Next"
            android:textColor="@color/dark_purple"
            android:textSize="12sp"
            android:elevation="2dp"
            android:fontFamily="@font/kumbhsans_bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="20dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
