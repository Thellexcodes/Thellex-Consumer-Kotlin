<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/general_gradient_background"
        android:padding="20dp"
        tools:context=".features.kyc.ui.basic.PassportActivity">

    <!-- Top App Bar -->
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/activity_wallet_top_app_bar_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingVertical="12dp">

        <ImageView
                android:id="@+id/activity_wallet_back_button"
                android:layout_width="24dp"
                android:layout_height="12dp"
                android:src="@drawable/icon_back"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        <TextView
                android:id="@+id/titleText"
                android:textColor="@color/white"
                android:text="INTERNATIONAL PASSPORT"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kumbhsans_bold"
                android:textSize="12sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/activity_wallet_back_button"
                app:layout_constraintEnd_toEndOf="parent"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingStart="12dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
            android:id="@+id/instructionContainer"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/activity_wallet_top_app_bar_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <TextView
                android:id="@+id/instructionText"
                android:text="Upload the data page of your international passport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kumbhsans_regular"
                android:textSize="14sp"
                android:textColor="@color/steelBlueGrey" />

        <LinearLayout
                android:id="@+id/infoContainer"
                android:layout_marginTop="22dp"
                android:paddingVertical="7dp"
                android:paddingHorizontal="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_golden_yellow_15pct"
                android:orientation="horizontal"
                android:gravity="center_vertical">
            <ImageView
                    android:id="@+id/iconInfoCircle"
                    android:src="@drawable/icon_info_circle"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
            <TextView
                    android:id="@+id/infoText"
                    android:textColor="@color/goldenYellow"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/kumbhsans_regular"
                    android:textSize="10sp"
                    android:text="Cross-check your information to make sure it is accurate."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Upload Front Passport -->
        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/uploadFrontContainer"
                android:layout_marginTop="22dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_border_midnight"
                android:paddingVertical="12dp"
                android:paddingHorizontal="16dp">

            <TextView
                    android:id="@+id/passportFrontLabel"
                    android:text="International Passport (Front)"
                    android:textColor="@color/white"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/kumbhsans_bold"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/uploadFrontButton"
                    app:layout_constraintHorizontal_bias="0"
                    android:ellipsize="end"
                    android:maxLines="1" />

            <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/uploadFrontButton"
                    android:paddingVertical="10dp"
                    android:paddingHorizontal="12dp"
                    android:background="@drawable/rounded_border"
                    android:text="Upload file"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Upload Back Passport -->
        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/uploadBackContainer"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_border_midnight"
                android:paddingVertical="12dp"
                android:paddingHorizontal="16dp">

            <TextView
                    android:id="@+id/passportBackLabel"
                    android:text="International Passport (Back)"
                    android:textColor="@color/white"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/kumbhsans_bold"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/uploadBackButton"
                    app:layout_constraintHorizontal_bias="0"
                    android:ellipsize="end"
                    android:maxLines="1" />

            <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/uploadBackButton"
                    android:paddingVertical="10dp"
                    android:paddingHorizontal="12dp"
                    android:background="@drawable/rounded_border"
                    android:textColor="@color/white"
                    android:text="Upload file"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/nextButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="@drawable/button_ripple"
            android:text="Next"
            android:elevation="2dp"
            android:fontFamily="@font/kumbhsans_bold"
            android:textColor="@color/dark_purple"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
