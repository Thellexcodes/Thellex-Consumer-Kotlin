<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

    <FrameLayout
            android:id="@+id/icon_container"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <ImageView
                android:id="@+id/token_icon"
                android:layout_width="41dp"
                android:layout_height="41dp"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_usdt" />

        <ImageView
                android:id="@+id/status_icon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="bottom|end"
                android:src="@drawable/icon_send_status"/>
    </FrameLayout>

    <!-- Sender Info -->
    <LinearLayout
            android:id="@+id/text_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="12dp"
            app:layout_constraintStart_toEndOf="@id/icon_container"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/amount_text">

        <TextView
                android:id="@+id/sender_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FARIDA ABDUL sent you"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:fontFamily="@font/kumbhsans_regular" />

        <TextView
                android:id="@+id/time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today, 10:09 AM"
                android:textColor="#AAAAAA"
                android:textSize="10sp"
                android:fontFamily="@font/kumbhsans_regular" />
    </LinearLayout>

    <!-- Amount Info -->
    <LinearLayout
            android:id="@+id/amount_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

        <TextView
                android:id="@+id/token_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20 USDT"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:fontFamily="@font/outfit_medium" />

        <TextView
                android:id="@+id/fiat_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$ 3,890.0938"
                android:textColor="#AAAAAA"
                android:textSize="10sp"
                android:fontFamily="@font/kumbhsans_light" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
