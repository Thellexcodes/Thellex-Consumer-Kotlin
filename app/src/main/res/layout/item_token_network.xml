<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:background="?attr/selectableItemBackground">

    <ImageView
            android:id="@+id/tokenIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
            android:id="@+id/tokenSymbol"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="USDT"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:fontFamily="@font/kumbhsans_regular"
            app:layout_constraintStart_toEndOf="@id/tokenIcon"
            app:layout_constraintTop_toTopOf="@id/tokenIcon"
            app:layout_constraintBottom_toBottomOf="@id/tokenIcon"
            app:layout_constraintEnd_toStartOf="@id/tokenNetwork"
            android:layout_marginStart="12dp" />

    <TextView
            android:id="@+id/tokenNetwork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MATIC"
            android:textSize="14sp"
            android:textColor="@color/steelBlueGrey"
            android:fontFamily="@font/kumbhsans_light"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tokenSymbol"
            app:layout_constraintBottom_toBottomOf="@id/tokenSymbol" />

</androidx.constraintlayout.widget.ConstraintLayout>
