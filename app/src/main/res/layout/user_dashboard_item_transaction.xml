<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

    <ImageView
            android:id="@+id/user_dashboard_txn_img_placeholder"
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/icon_usdc"
            android:background="@drawable/round_shape"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
            android:id="@+id/txn_description"
            android:layout_width="0dp"
            android:layout_marginLeft="8dp"
            android:layout_height="wrap_content"
            android:text="Transaction description"
            android:textColor="@color/white"
            android:fontFamily="@font/kumbhsans_regular"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/user_dashboard_txn_img_placeholder"
            app:layout_constraintTop_toTopOf="@id/user_dashboard_txn_img_placeholder"
            app:layout_constraintEnd_toStartOf="@id/txn_amount"
            app:layout_constraintHorizontal_bias="0" />

    <TextView
            android:id="@+id/txn_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Transaction time"
            android:textColor="@color/white"
            android:fontFamily="@font/kumbhsans_regular"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="@id/txn_description"
            app:layout_constraintTop_toBottomOf="@id/txn_description"
            app:layout_constraintEnd_toEndOf="@id/txn_description"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.166"
            app:layout_constraintBottom_toBottomOf="@+id/user_dashboard_txn_img_placeholder" />

    <TextView
            android:id="@+id/txn_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â‚¦20,000"
            android:textColor="@color/white"
            android:fontFamily="@font/outfit_medium"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

