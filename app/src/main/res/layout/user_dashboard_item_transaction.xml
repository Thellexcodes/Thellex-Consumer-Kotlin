<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

    <ImageView
            android:id="@+id/user_dashboard_txn_img_placeholder"
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/icon_usdc"
            android:background="@drawable/round_shape"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/user_dashboard_txn_img_placeholder"
            app:layout_constraintTop_toTopOf="@id/user_dashboard_txn_img_placeholder">

        <TextView
                android:id="@+id/txn_description"
                android:text="Transaction description"
                android:textColor="@color/white"
                android:fontFamily="@font/kumbhsans_regular"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        <TextView
                android:id="@+id/txn_time"
                android:text="Transaction time"
                android:textColor="@color/white"
                android:fontFamily="@font/kumbhsans_regular"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp" />
    </LinearLayout>

    <TextView
            android:id="@+id/txn_amount"
            android:text="â‚¦20,000"
            android:textColor="@color/white"
            android:fontFamily="@font/outfit_medium"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>
