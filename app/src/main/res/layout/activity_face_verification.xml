<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:background="@drawable/general_gradient_background"
        tools:context=".features.kyc.ui.FaceVerificationActivity">

    <!-- Top App Bar -->
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/activity_wallet_top_app_bar_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingVertical="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <ImageView
                android:id="@+id/activity_wallet_back_button"
                android:layout_width="24dp"
                android:layout_height="12dp"
                android:src="@drawable/icon_back"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        <TextView
                android:id="@+id/titleText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="SELF VERIFICAITON"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:fontFamily="@font/kumbhsans_bold"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingStart="12dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/activity_wallet_back_button"
                app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Hand + Face Image -->
    <ImageView
            android:id="@+id/imageView2"
            android:layout_width="158dp"
            android:layout_height="158dp"
            android:layout_marginTop="48dp"
            android:src="@drawable/img_hand_face"
            app:layout_constraintTop_toBottomOf="@id/activity_wallet_top_app_bar_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    <!-- Face Verification Texts -->
    <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="48dp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/imageView2">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Take a Selfie"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="21sp"
                android:fontFamily="@font/outfit_bold" />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:text="Your face needs to be verified against the information you have provided. Please follow the guidelines to ensure proper capture."
                android:textColor="@color/white"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="14sp"
                android:fontFamily="@font/kumbhsans_regular"
                android:paddingTop="8dp" />
    </LinearLayout>

    <!-- Instructions Section -->
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/rounded_border_midnight"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <TextView
                android:id="@+id/instructionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Instructions"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:fontFamily="@font/outfit_medium"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
               />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintTop_toBottomOf="@id/instructionTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp">

                <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/icon_bright" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="Ensure your face is well-lit."
                        android:textColor="@color/steelBlueGrey"
                        android:textSize="12sp"
                        android:fontFamily="@font/kumbhsans_regular" />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp">

                <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/icon_bright" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="Remove any glasses or hats."
                        android:textColor="@color/steelBlueGrey"
                        android:textSize="12sp"
                        android:fontFamily="@font/kumbhsans_regular" />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp">

                <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/icon_bright" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="Hold your phone steady during capture."
                        android:textColor="@color/steelBlueGrey"
                        android:textSize="12sp"
                        android:fontFamily="@font/kumbhsans_regular" />
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/startButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="@drawable/button_ripple"
            android:text="Take Photo"
            android:elevation="2dp"
            android:fontFamily="@font/kumbhsans_bold"
            android:textColor="@color/dark_purple"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
