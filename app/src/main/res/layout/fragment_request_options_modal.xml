<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/fragment_request_options_modal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:background="@drawable/general_gradient_background">

        <!-- Fiat Option -->
        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/btnReceiveFromFiat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_border"
                android:paddingHorizontal="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:paddingVertical="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="12dp">
                <TextView
                        android:id="@+id/textFiat"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Receive Crypto from Fiat"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/btnContinueFiat"
                        app:layout_constraintHorizontal_bias="0" />

                <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnContinueFiat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/goldenYellow"
                        android:text="Continue"
                        android:textSize="10sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginEnd="8dp" />

                <TextView
                        android:id="@+id/badgeKycFiat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="KYC Required"
                        android:textSize="8sp"
                        android:textColor="@android:color/holo_red_dark"
                        android:visibility="gone"
                        android:padding="4dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/btnContinueFiat"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Crypto Option -->
        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/btnReceiveCrypto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/rounded_border"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                app:layout_constraintTop_toBottomOf="@id/btnReceiveFromFiat"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="12dp">

                <TextView
                        android:id="@+id/textCrypto"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="Receive Crypto"
                        android:textSize="10sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/btnContinueCrypto"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnContinueCrypto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/goldenYellow"
                        android:layout_marginEnd="8dp"
                        android:text="Continue"
                        android:textSize="10sp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_marginTop="12dp"
                android:id="@+id/btnReceiveFromBank"
                android:layout_width="0dp"
                android:paddingVertical="5dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_border"
                android:paddingHorizontal="10dp"
                app:layout_constraintTop_toBottomOf="@id/btnReceiveCrypto"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                        android:id="@+id/textBank"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Receive from Bank"
                        android:textSize="10sp"
                        android:textColor="@color/white"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/btnContinueBank"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                <androidx.appcompat.widget.AppCompatButton
                        android:layout_marginEnd="8dp"
                        android:id="@+id/btnContinueBank"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/goldenYellow"
                        android:text="Continue"
                        android:textSize="10sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                <TextView
                        android:id="@+id/badgeKycBank"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="KYC Required"
                        android:textSize="10sp"
                        android:visibility="gone"
                        android:textColor="@android:color/holo_red_dark"
                        android:padding="4dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/btnContinueBank"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
